{
  "expo": {
    "name": "UpTend",
    "slug": "uptend",
    "scheme": "uptend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFBF5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.uptend.app",
      "associatedDomains": [
        "applinks:uptendapp.com"
      ],
      "infoPlist": {
        "NSCameraUsageDescription": "UpTend uses the camera for home scans and AR features",
        "NSPhotoLibraryUsageDescription": "UpTend needs photo access to upload images"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F59E0B"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.uptend.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "uptendapp.com",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#F59E0B"
        }
      ],
      "expo-web-browser",
      "@stripe/stripe-react-native"
    ]
  }
}
